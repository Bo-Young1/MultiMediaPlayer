<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framelayout1">

    <SurfaceView
        android:id="@+id/surface1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

        <LinearLayout
           android:id="@+id/linear1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="bottom"
           android:gravity="center_horizontal"
           android:background="@color/slategray"
           android:alpha="0.7"
            android:visibility="gone">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/tvVideoTimeElapsed"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:gravity="right"
                 android:layout_weight="1"
                 android:text="00:00" />
             <SeekBar
                 android:id="@+id/videoDuration"
                 style="?android:attr/progressBarStyleHorizontal"
                 android:layout_width="0dip"
                 android:layout_height="10dip"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:layout_weight="6"
                 android:maxHeight="1dip"
                 android:minHeight="1dip"
                 android:progressDrawable="@drawable/progress_style"
                 android:secondaryProgress="0"
                 android:thumb="@drawable/thumbselector"
                 android:thumbOffset="0dip" />
             <TextView
                 android:id="@+id/tvVideoDuration"
                 android:layout_width="0dip"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:layout_weight="1"
                 android:text="00:00" />
         </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp">
        <ImageButton android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            android:background="@drawable/video_selector"
            android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/kuaitui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video_selector"
                    android:src="@drawable/kuaitui"
                    android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_selector"
            android:src="@drawable/pause1"
            android:layout_weight="1"/>
                <ImageButton
                    android:id="@+id/kuaijin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video_selector"
                    android:src="@drawable/kuaijin"
                    android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_selector"
            android:src="@drawable/tingzhi"
            android:layout_weight="1"/>

            </LinearLayout>
    </LinearLayout>

